@model Games.BL.Game

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление</h1>

<h3>Вы уверены, что хотите удалить игру?</h3>
<div>
    <h4>Игра</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название игры
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Разработчик
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Developer.Name)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Обратно к списку игр</a>
    </form>
</div>
